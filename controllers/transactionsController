const express = require("express");
const transactions = express.Router();
const transactionsArray = require("../models/transactions.js");
const transactionsValidator = require("../models/validator.js")


transactions.get("/", (req, res) => {
    res.json(transactionsArray);
});

//find the transaction they are looking for use res.params to access and find the correct transaction
transactions.get("/:id", (req, res) => {
    res.json(transactionsArray);
});

transactions.post("/", transactionsValidator, (req, res) => {
    transactionsArray.push(req.body);
    res.status(201).json(transactionsArray[transactionsArray.length - 1])
});

transactions.put("/:id", (req, res) => {
    const { id } = req.params;
    if (transactionsArray) {
        transactionsArray = req.body
        res.status(200).json(transactionsArray);
    } else {
        res.status(404).json({ error: "Not Found" })
    }
});

transactions.delete("/:id", (req, res) => {
    const { id } = req.params;
    if (transactions[id]) {
        const deletedTransactions = transactionsArray.splice(id, 1); // returns deleted logs
        res.status(200).json(transactionsArray)
    } else {
        res.status(404).json({ error: "Not Found" });
    }
});



module.exports = transactions;